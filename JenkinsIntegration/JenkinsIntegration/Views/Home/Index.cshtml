@{
  ViewData["Title"] = "Jenkins Integration";
}
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
